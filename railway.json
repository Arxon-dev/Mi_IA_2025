{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  },
  "environments": {
    "production": {
      "variables": {
        "TZ": "Europe/Madrid",
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "NEXT_TELEMETRY_DISABLED": "1",
        "NODE_ENV": "production"
      }
    }
  }
}