<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/telegram_integration/db" VERSION="20240101" COMMENT="XMLDB file for Moodle local/telegram_integration"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/ddl/xmldb.xsd">
  <TABLES>
    <TABLE NAME="local_telegram_user_topic_performance" COMMENT="User topic performance tracking">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="topic" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="correct_answers" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="total_answers" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="last_updated" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_topic" UNIQUE="true" FIELDS="userid, topic"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB> 