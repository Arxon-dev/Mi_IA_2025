    "weekly": {
      "enabled": true,
      "frequency": "every4h",
      "cronExpression": "0 */4 * * *",
      "topUsersCount": 8,
      "showAccuracy": true,
      "showAverageTime": true,
      "includeMemes": true,
      "showComparison": true
    },
    "monthly": {
      "enabled": true,
      "frequency": "monthly",
      "cronExpression": "0 10 1 * *",
      "topUsersCount": 8,
      "showAccuracy": true,
      "showAverageTime": true,
      "includeMemes": true,
      "showComparison": true,
      "resetDay": 1,
      "announceNewMonth": true,
