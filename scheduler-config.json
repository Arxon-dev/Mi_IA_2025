  "rankings": {
    "general": {
      "enabled": true,
      "frequency": "every6h",
      "cronExpression": "0 */6 * * *",
      "topUsersCount": 8,
      "showFailStats": true,
      "includeWeeklyStats": true,
      "showAccuracy": true,
      "showAverageTime": true,
      "includeMemes": true
