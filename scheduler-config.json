    "allowedHours": {
      "startHour": 7,
      "endHour": 22,
      "description": "Horario permitido para envío de notificaciones inteligentes (07:00 - 22:00)"
    }
  },
  "promotionalNotifications": {
    "enabled": true,
    "morningTime": "10:00",
