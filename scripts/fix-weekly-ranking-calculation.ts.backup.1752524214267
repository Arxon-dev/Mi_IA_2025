import { prisma } from '../src/lib/prisma';

/**
 * ğŸ”§ FIX: RANKING SEMANAL FIJO
 * 
 * Problema: El ranking semanal actual usa "Ãºltimos 7 dÃ­as" (mÃ³vil)
 * SoluciÃ³n: Implementar semana fija (lunes a domingo)
 */

function getWeekDates(date: Date = new Date()) {
  const currentDate = new Date(date);
  
  // Encontrar el lunes de esta semana
  const dayOfWeek = currentDate.getDay();
  const daysFromMonday = dayOfWeek === 0 ? 6 : dayOfWeek - 1; // Domingo = 0, convertir a 6
  
  const mondayOfWeek = new Date(currentDate);
  mondayOfWeek.setDate(currentDate.getDate() - daysFromMonday);
  mondayOfWeek.setHours(0, 0, 0, 0);
  
  // Domingo de esta semana
  const sundayOfWeek = new Date(mondayOfWeek);
  sundayOfWeek.setDate(mondayOfWeek.getDate() + 6);
  sundayOfWeek.setHours(23, 59, 59, 999);
  
  return {
    weekStart: mondayOfWeek,
    weekEnd: sundayOfWeek,
    weekLabel: `${mondayOfWeek.getDate()}/${mondayOfWeek.getMonth() + 1} - ${sundayOfWeek.getDate()}/${sundayOfWeek.getMonth() + 1}`
  };
}

async function calculateFixedWeeklyRanking() {
  console.log('ğŸ”§ ======== FIX RANKING SEMANAL ========');
  console.log('ğŸ¯ Implementando ranking semanal FIJO (lunes a domingo)\n');

  try {
    const { weekStart, weekEnd, weekLabel } = getWeekDates();
    
    console.log('ğŸ“… Semana actual:');
    console.log(`   Inicio: ${weekStart.toLocaleString('es-ES')} (lunes)`);
    console.log(`   Fin: ${weekEnd.toLocaleString('es-ES')} (domingo)`);
    console.log(`   Etiqueta: Semana del ${weekLabel}\n`);

    // Obtener usuarios con actividad en esta semana FIJA
    const usersWithWeeklyActivity = await prisma.telegramUser.findMany({
      where: {
        responses: {
          some: {
            answeredAt: {
              gte: weekStart,
              lte: weekEnd
            }
          }
        }
      },
      select: {
        telegramUserId: true,
        firstName: true,
        username: true,
        level: true,
        totalPoints: true,
        responses: {
          where: {
            answeredAt: {
              gte: weekStart,
              lte: weekEnd
            }
          },
          select: {
            points: true,
            isCorrect: true,
            responseTime: true,
            answeredAt: true
          }
        }
      }
    });

    console.log(`ğŸ‘¥ Usuarios con actividad en semana fija: ${usersWithWeeklyActivity.length}\n`);

    // Calcular estadÃ­sticas por usuario
    const weeklyRanking = usersWithWeeklyActivity.map(user => {
      const responses = user.responses;
      
      const weeklyPoints = responses.reduce((sum, r) => sum + (r.points || 0), 0);
      const weeklyResponses = responses.length;
      const weeklyCorrect = responses.filter(r => r.isCorrect).length;
      const weeklyIncorrect = weeklyResponses - weeklyCorrect;
      const weeklyAccuracy = weeklyResponses > 0 
        ? Math.round((weeklyCorrect / weeklyResponses) * 100)
        : 0;
      
      const totalResponseTime = responses.reduce((sum, r) => sum + (r.responseTime || 0), 0);
      const avgResponseTime = weeklyResponses > 0 
        ? Math.round(totalResponseTime / weeklyResponses)
        : 0;

      return {
        telegramUserId: user.telegramUserId,
        firstName: user.firstName || 'Usuario',
        username: user.username || undefined,
        weeklyPoints,
        weeklyResponses,
        weeklyCorrect,
        weeklyIncorrect,
        weeklyAccuracy,
        avgResponseTime,
        level: user.level,
        totalPoints: user.totalPoints
      };
    }).sort((a, b) => b.weeklyPoints - a.weeklyPoints);

    // Mostrar ranking corregido
    console.log('ğŸ† RANKING SEMANAL FIJO (Top 10):');
    console.log(`ğŸ“… Semana del ${weekLabel}\n`);

    weeklyRanking.slice(0, 10).forEach((user, index) => {
      const medal = index === 0 ? 'ğŸ¥‡' : index === 1 ? 'ğŸ¥ˆ' : index === 2 ? 'ğŸ¥‰' : 'ğŸ”¸';
      const name = user.username || user.firstName;
      
      console.log(`${medal} ${index + 1}. ${name}`);
      console.log(`   ğŸ“Š ${user.weeklyPoints} pts | ğŸ’ Nv.${user.level} | ğŸ¯ ${user.weeklyAccuracy}%`);
      console.log(`   ğŸ“ ${user.weeklyResponses} respuestas | âœ… ${user.weeklyCorrect} | âŒ ${user.weeklyIncorrect}\n`);
    });

    // Buscar especÃ­ficamente a Juanmaprieto
    const juanmaprieto = weeklyRanking.find(u => u.telegramUserId === '1324285278');
    if (juanmaprieto) {
      const position = weeklyRanking.findIndex(u => u.telegramUserId === '1324285278') + 1;
      console.log('ğŸ” ANÃLISIS ESPECÃFICO - Juanmaprieto:');
      console.log(`   ğŸ† PosiciÃ³n: #${position}`);
      console.log(`   ğŸ“Š Puntos semana fija: ${juanmaprieto.weeklyPoints}`);
      console.log(`   ğŸ“ Respuestas: ${juanmaprieto.weeklyResponses}`);
      console.log(`   ğŸ¯ PrecisiÃ³n: ${juanmaprieto.weeklyAccuracy}%\n`);

      // Comparar con sistema mÃ³vil actual
      const now = new Date();
      const sevenDaysAgo = new Date(now);
      sevenDaysAgo.setDate(now.getDate() - 7);

      const mobileWeekResponses = await prisma.telegramResponse.findMany({
        where: {
          user: { telegramUserId: '1324285278' },
          answeredAt: {
            gte: sevenDaysAgo,
            lte: now
          }
        },
        select: { points: true }
      });

      const mobileWeekPoints = mobileWeekResponses.reduce((sum, r) => sum + (r.points || 0), 0);

      console.log('ğŸ“Š COMPARACIÃ“N DE SISTEMAS:');
      console.log(`   ğŸ”„ Sistema mÃ³vil (Ãºltimos 7 dÃ­as): ${mobileWeekPoints} pts`);
      console.log(`   ğŸ“… Sistema fijo (lunes-domingo): ${juanmaprieto.weeklyPoints} pts`);
      console.log(`   ğŸ“ˆ Diferencia: ${juanmaprieto.weeklyPoints - mobileWeekPoints} pts\n`);
    }

    // EstadÃ­sticas de comparaciÃ³n
    console.log('ğŸ“ˆ ESTADÃSTICAS COMPARATIVAS:');
    
    // Actividad por dÃ­a de la semana
    const activityByDay = weeklyRanking.reduce((acc, user) => {
      acc.totalPoints += user.weeklyPoints;
      acc.totalResponses += user.weeklyResponses;
      return acc;
    }, { totalPoints: 0, totalResponses: 0 });

    console.log(`   ğŸ“Š Puntos totales semana: ${activityByDay.totalPoints}`);
    console.log(`   ğŸ“ Respuestas totales semana: ${activityByDay.totalResponses}`);
    console.log(`   ğŸ‘¥ Usuarios activos: ${weeklyRanking.length}`);
    
    if (weeklyRanking.length > 0) {
      const avgPoints = Math.round(activityByDay.totalPoints / weeklyRanking.length);
      const avgResponses = Math.round(activityByDay.totalResponses / weeklyRanking.length);
      console.log(`   ğŸ“Š Promedio puntos/usuario: ${avgPoints}`);
      console.log(`   ğŸ“ Promedio respuestas/usuario: ${avgResponses}`);
    }

  } catch (error) {
    console.error('âŒ Error en cÃ¡lculo:', error);
  } finally {
    await prisma.$disconnect();
  }
}

// TambiÃ©n calcular la semana pasada para comparar
async function compareWithLastWeek() {
  console.log('\nğŸ”„ ======== COMPARACIÃ“N SEMANA PASADA ========');
  
  try {
    const lastWeek = new Date();
    lastWeek.setDate(lastWeek.getDate() - 7);
    const { weekStart: lastWeekStart, weekEnd: lastWeekEnd, weekLabel: lastWeekLabel } = getWeekDates(lastWeek);
    
    console.log(`ğŸ“… Semana pasada: ${lastWeekLabel}`);
    
    const lastWeekResponses = await prisma.telegramResponse.findMany({
      where: {
        user: { telegramUserId: '1324285278' },
        answeredAt: {
          gte: lastWeekStart,
          lte: lastWeekEnd
        }
      },
      select: { points: true }
    });

    const lastWeekPoints = lastWeekResponses.reduce((sum, r) => sum + (r.points || 0), 0);
    console.log(`ğŸ“Š Juanmaprieto semana pasada: ${lastWeekPoints} pts (${lastWeekResponses.length} respuestas)`);
    
  } catch (error) {
    console.error('âŒ Error comparando semana pasada:', error);
  }
}

async function main() {
  await calculateFixedWeeklyRanking();
  await compareWithLastWeek();
}

main(); 