async function sendIndividualContextMessage(questionData: any) {
  try {
    const difficulty = questionData?.difficulty || 'medium';
    const type = questionData?.type || 'multiple_choice';
    const bloom = questionData?.bloomLevel || 'conocimiento';
    
    const contextMessage = `ğŸ“š <b>PREGUNTA DIARIA DEL DÃA</b> ğŸ“š

ğŸ¯ <b>Dificultad:</b> ${difficulty}
ğŸ“Š <b>Tipo:</b> ${type}
ğŸŒ¸ <b>Bloom:</b> ${bloom}
ğŸ† <b>Compite por puntos y sube en el ranking!</b>

ğŸ’¡ <b>Recuerda:</b>
â€¢ âœ… Respuestas correctas = +20 puntos
â€¢ âš¡ Respuestas rÃ¡pidas = bonificaciÃ³n
â€¢ ğŸ”¥ MantÃ©n tu racha diaria activa

ğŸ“ˆ Usa /ranking para ver tu posiciÃ³n
ğŸ“Š Usa /stats para ver tus estadÃ­sticas

Â¡Buena suerte! ğŸ€`;

    await fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendMessage`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        chat_id: CHAT_ID,
        text: contextMessage,
        parse_mode: 'HTML'
      })
    });
    
    console.log('ğŸ“ Mensaje de contexto individual enviado');
    
  } catch (error) {
    console.log('âš ï¸  Error enviando mensaje de contexto individual:', error);
  }
}

// Ejecutar si se llama directamente
if (require.main === module) {
  sendDailyPoll();
}

export { sendDailyPoll }; 