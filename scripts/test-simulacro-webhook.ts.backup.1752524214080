import { PrismaClient } from '@prisma/client';

const prisma = new PrismaClient();

async function testSimulacro2024Webhook() {
  console.log('üß™ PROBANDO FUNCIONALIDAD DEL WEBHOOK SIMULACRO 2024...\n');
  
  try {
    // Verificar que ExamenOficial2024 funciona
    console.log('üìã Test 1: Verificando acceso a ExamenOficial2024...');
    const questions = await (prisma as any).examenOficial2024.findMany({
      take: 5,
      orderBy: { questionNumber: 'asc' }
    });
    console.log(`‚úÖ Encontradas ${questions.length} preguntas del examen 2024`);
    
    // Verificar usuario de prueba
    console.log('\nüë§ Test 2: Verificando usuario de prueba...');
    const testUser = await prisma.telegramUser.findFirst({
      where: { telegramUserId: '5793286375' }
    });
    
    if (testUser) {
      console.log(`‚úÖ Usuario encontrado: ${testUser.firstName} (ID: ${testUser.id})`);
      
      // Verificar simulacro activo
      console.log('\nüéØ Test 3: Verificando simulacro activo...');
      const activeSimulacro = await prisma.simulacro.findFirst({
        where: {
          userId: testUser.id,
          status: 'in_progress'
        }
      });
      
      if (activeSimulacro) {
        console.log(`‚úÖ Simulacro activo encontrado: ${activeSimulacro.id}`);
        
        // Verificar respuestas del simulacro
        console.log('\nüìù Test 4: Verificando respuestas del simulacro...');
        const responses = await prisma.simulacroResponse.findMany({
          where: {
            simulacroId: activeSimulacro.id
          },
          take: 10
        });
        
        console.log(`‚úÖ Encontradas ${responses.length} respuestas del simulacro`);
        
        if (responses.length > 0) {
          const unansweredResponse = responses.find(r => !r.answeredAt);
          if (unansweredResponse) {
            console.log(`üìã Primera pregunta sin responder: ${unansweredResponse.questionNumber}`);
            
            // Buscar la pregunta correspondiente
            const question = await (prisma as any).examenOficial2024.findUnique({
              where: { id: unansweredResponse.questionId }
            });
            
            if (question) {
              console.log(`‚úÖ Pregunta encontrada: "${question.question.substring(0, 100)}..."`);
              console.log(`‚úÖ Opciones: ${question.options.length}`);
              console.log(`‚úÖ Respuesta correcta: ${question.correctAnswerIndex}`);
            } else {
              console.log('‚ùå No se encontr√≥ la pregunta correspondiente');
            }
          } else {
            console.log('‚úÖ Todas las preguntas han sido respondidas');
          }
        }
        
      } else {
        console.log('‚ùå No hay simulacro activo');
      }
      
    } else {
      console.log('‚ùå Usuario de prueba no encontrado');
    }
    
    console.log('\nüéâ PRUEBAS COMPLETADAS');
    
  } catch (error) {
    console.error('‚ùå Error en las pruebas:', error);
  } finally {
    await prisma.$disconnect();
  }
}

testSimulacro2024Webhook(); 