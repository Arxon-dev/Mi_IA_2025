function getLevelPredictionMotivation(pointsNeeded: number, questionsNeeded: number): string {
  if (pointsNeeded <= 50) {
    return 'üî• ¬°Est√°s s√∫per cerca! ¬°Solo unas pocas preguntas m√°s!';
