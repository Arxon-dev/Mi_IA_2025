  let message = `üèÜ <b>RANKING OFICIAL ${examYear}</b> üèÜ\n\n`;
  
  ranking.forEach((entry, index) => {
    const medal = index === 0 ? 'ü•á' : index === 1 ? 'ü•à' : index === 2 ? 'ü•â' : 'üî∏';
