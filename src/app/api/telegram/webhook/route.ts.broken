function getPointsForLevel(level: number): number {
  const levelThresholds = [0, 100, 300, 600, 1000, 1500, 2100, 2800, 3600, 4500, 5500];
  if (level <= 10) {
    return levelThresholds[level] || 5500 + (level - 10) * 1000;
  }
  return 5500 + (level - 10) * 1000;
}

